---
import BaseLayout from "./base.layout.astro"
import Header from "../components/header.svelte"

interface Props {
  title: string
}

const { title } = Astro.props as Props
---

<BaseLayout title={title}>
  <Header></Header>
  <div>
    <div class="wrap">
      <main class="grid grid-cols-[200px_1fr_200px] w-full items-stretch justify-center gap-4 px-8">
        <aside class="hidden sm:block border-r py-12 pr-8">
          <div class="sticky top-4">
            test
          </div>
        </aside>
    
        <div class="py-12 px-16">
          <slot />
        </div>
  
        <aside class="hidden sm:block border-l py-12 pl-8">
          <div class="sticky top-4">
            test
          </div>
        </aside>
      </main>
    </div>
  </div>
</BaseLayout>